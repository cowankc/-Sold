<style>
    *, *:before, *:after {
  box-sizing: border-box;
  padding: 0;
  margin: 0;
}

main {
  background: ghostwhite;
  overflow: hidden;
  font-family: sans-serif;
}

.swiper {
  width: 100vw;
  height: 90vh;
  overflow: hidden;
  display: flex;
  flex-direction: column;
  position: relative;
  opacity: 0;
  transition: opacity 0.1s ease-in-out;
}

.loaded.swiper {
  opacity: 1;
}

.swiper--status {
  position: absolute;
  top: 50%;
  margin-top: -30px;
  z-index: 2;
  width: 100%;
  text-align: center;
  pointer-events: none;
}

.swiper--status i {
  font-size: 100px;
  opacity: 0;
  transform: scale(0.3);
  transition: all 0.2s ease-in-out;
  position: absolute;
  width: 100px;
  margin-left: -50px;
}

.swiper_love .fa-heart {
  opacity: 0.7;
  transform: scale(1);
}

.swiper_nope .fa-remove {
  opacity: 0.7;
  transform: scale(1);
}

.swiper--cards {
  flex-grow: 1;
  padding-top: 40px;
  text-align: center;
  display: flex;
  justify-content: center;
  align-items: flex-end;
  z-index: 1;
}

.swiper--card {
  display: inline-block;
  width: 90vw;
  max-width: 400px;
  height: 70vh;
  background: #FFFFFF;
  padding-bottom: 40px;
  border-radius: 8px;
  overflow: hidden;
  position: absolute;
  will-change: transform;
  transition: all 0.3s ease-in-out;
  cursor: -webkit-grab;
  cursor: -moz-grab;
  cursor: grab;
}

.moving.swiper--card {
  transition: none;
  cursor: -webkit-grabbing;
  cursor: -moz-grabbing;
  cursor: grabbing;
}

.swiper--card-img {
  width: 100%;
  height: 55%;
  pointer-events: none;
}

.swiper--card h3 {
  margin-top: 32px;
  font-size: 30px;
  padding: 0 16px;
  pointer-events: none;
}

.swiper--card p {
  margin-top: 24px;
  font-size: 20px;
  padding: 0 16px;
  pointer-events: none;
}

.swiper--buttons {
  flex: 0 0 100px;
  text-align: center;
  padding-top: 20px;
}

.swiper--buttons button {
  border-radius: 50%;
  line-height: 60px;
  width: 60px;
  border: 0;
  background: #FFFFFF;
  display: inline-block;
  margin: 0 8px;
}

.swiper--buttons button:focus {
  outline: 0;
}

.swiper--buttons i {
  font-size: 32px;
  vertical-align: middle;
}

.fa-heart {
  color: #d32f2f;
}

.fa-remove {
  color: #CDD6DD;
}

</style>
<main>

<div class="swiper">
  <div class="swiper--status">
    <i class="fa fa-remove"></i>
    <i class="fa fa-heart"></i>
  </div>

  <div class="swiper--cards">
    
      {{#each meals}}
      <div class="swiper--card">
      <img src="{{this.dataValues.photo}}" class="swiper--card-img">
      <h3>{{this.dataValues.mealName}}</h3>
 <p style="text-align:left;">
    <img src="{{this.user.photo}}" class="circle" height="25px">{{this.user.userName}}
    <span style="float:right; font-size: 20px; font-weight: 400"><i class="fa fa-usd" aria-hidden="true"></i>
{{this.dataValues.price}}</span>
    </p>
    <p>{{this.dataValues.category}}</p>
    </div>
    {{/each}}
  </div>

  <div class="swiper--buttons">
    <button id="nope"><i class="fa fa-remove"></i></button>
    <button id="love"><i class="fa fa-heart"></i></button>
  </div>
</div>
</main>

