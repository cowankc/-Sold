<head>

    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">

    <style>
        #card-area{
            text-align: center;
            display: flex;
            justify-content: center;
            align-items: flex-end;
            padding-top:10px;
        }

        #rating-area{
            text-align: center;
            display: flex;
            justify-content: center;
            align-items: flex-end;
        }

        #rating-buttons{
            padding-top:5px;
            padding-bottom:5px;
        }
    </style>

    <script>
        $(document).ready(function() {
        $('input#input_text, textarea#textarea2').characterCounter();
    });
    </script>

</head>

